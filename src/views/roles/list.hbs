<div class="container p-4">
    <div class="row">
        {{#each roles}}
            <div class="col-md-3">
                <div class="card text-center">
                    <div class="card-body">
                        <a href="">
                            <h3 class="card-title text-uppercase">
                                {{name}}
                            </h3>
                        </a>
                        <h5 class="card-text">
                            {{#ifEquals estado  'A'}}
                                ACTIVADO
                            {{else}}
                                DESACTIVADO
                            {{/ifEquals}}
                        </h5>
                    </div>
                </div>
            </div>

        {{/each}}
    </div>
</div>