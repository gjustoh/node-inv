<div class="container p-4">
    <div class="row">
        {{#each roles}}
            <div class="col-md-3">
                <div class="card text-center">
                    <div class="card-body">
                        
                            <h3 id="estado" class="card-title text-uppercase">
                                {{name}}
                            </h3>
                        <h5  class="card-text">Estado: 
                            {{#switch  estado }} 
                                {{#case  "A"  }} Activo {{/case }} 
                                {{#case  "I"  break=true}} Inactivo{{/case }} 
                                {{#case  "*"  break=true}} Eliminado {{/case }} 
                            {{/switch }}

                        </h5>
                        <br>
                        <a href="/roles/delete/{{id}}" class="btn btn-danger">Eliminar rol</a>
                        <a href='' class="btn btn-secondary">Editar</a>
                    </div>
                </div>
            </div>
        {{else}}
            <div class="col-md4 mx-auto">
                <div class="card card-body text-center">
                    <p>No hay roles creados</p>
                    <a href="roles/add">Crear rol</a>
                </div>
            </div>
        {{/each}}
    </div>
</div>