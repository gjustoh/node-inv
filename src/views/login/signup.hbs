<div class="main">

    <!-- Sign up form -->
    <section class="signup">
        <div class="container">
            <div class="row">
                <div class="col-md-7">
                    <div class="signup-form">
                        <h2 class="form-title">Sign up</h2>
                        <form method="POST" action="/signup" class="register-form" id="register-form">
                            <div class="form-group">
                                <div class="row">
                                    <div class="col-sm-2">
                                        <label for="rol">Rol</label>
                                    </div>
                                    <div class="col-sm-10">
                                        <select class="rol form-control" id="rol" name="rol_id">
                                            <option value="1">Administrador</option>
                                            <option value="36">Usuario</option>
                                        </select>
                                    </div>
                                </div>
                            </div>
                            {{!-- Nombres --}}
                            <div class="input">
                                <span class="fa fa-signature" aria-hidden="true"></span>
                                <input type="text" placeholder="Nombre" name="nombre" required />
                            </div>
                            {{!-- Apellidos --}}
                            <div class="input">
                                <span class="fa fa-signature" aria-hidden="true"></span>
                                <input type="text" placeholder="Apellidos" name="apellidos" required />
                            </div>
                            {{!-- Direccion --}}
                            <div class="input">
                                <span class="fa fa-signature" aria-hidden="true"></span>
                                <input type="textarea" placeholder="Direccion" name="direccion" required />
                            </div>
                            {{!-- Telefono --}}
                            <div class="input">
                                <span class="fa fa-phone" aria-hidden="true"></span>
                                <input type="tel" id="phone" name="telefono" placeholder="telefono" required />
                            </div>
                            {{!-- Email --}}
                            <div class="input">
                                <span class="fa fa-at" aria-hidden="true"></span>
                                <input type="email" placeholder="Email" name="email" placeholder="email" required />
                            </div>
                            {{!-- Passwords --}}
                            <div class="input">
                                <span class="fa fa-key" aria-hidden="true"></span>
                                <input type="password" placeholder="Password" name="password" required />
                            </div>
                            <div class="input">
                                <span class="fa fa-key" aria-hidden="true"></span>
                                <input type="text" placeholder="Confirm Password" name="Lpassword" required />
                            </div>

                            {{!-- imagen --}}
                            <div class="input">
                                <span class="fa fa-images" aria-hidden="true"></span>
                                <input type="text" placeholder="Imagen url" name="skin_url" required />
                            </div>
                            {{!-- Estado --}}

                            <input type='hidden' name="estado" value="A">
                            <button type="submit" class="btn submit">Register</button>
                        </form>
                    </div>
                </div>
                <div class="col-md-5">
                    <div class="signup-image">
                        <figure><img src="/img/signup-image.jpg" alt="sing up image"></figure>
                        <a href="signin" class="signup-image-link">I am already member</a>
                    </div>

                </div>
            </div>
        </div>
    </section>

</div>
<script src="/js/login.js"></script>